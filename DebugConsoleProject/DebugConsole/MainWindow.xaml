<Window x:Class="DebugConsole.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Debug Console"
        Height="500" Width="850"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <!-- Rounded TextBox Style -->
        <Style TargetType="TextBox" x:Key="RoundedTextBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom DataGrid Header Style -->
        <Style x:Key="CustomHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border Background="#1e1e1e" CornerRadius="8" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Filter/Search Bar with Placeholder -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <TextBox x:Name="FilterTextBox"
                         Height="35"
                         Style="{StaticResource RoundedTextBox}"
                         TextChanged="FilterTextBox_TextChanged" />
                <TextBlock Text="Filter logs..." Foreground="#888" FontSize="14"
                           Margin="12,0,0,0" VerticalAlignment="Center"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=FilterTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, ElementName=FilterTextBox}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text.Length, ElementName=FilterTextBox}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text.Length, ElementName=FilterTextBox}" Value="1">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- Log Table -->
            <DataGrid x:Name="LogGrid"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      Background="#252526"
                      Foreground="White"
                      FontSize="14"
                      FontFamily="Consolas"
                      RowHeaderWidth="0"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      HorizontalGridLinesBrush="#444"
                      VerticalGridLinesBrush="#444"
                      AlternatingRowBackground="#2a2a2a"
                      RowBackground="#1e1e1e"
                      SelectionMode="Single"
                      BorderThickness="0"
                      Margin="0"
                      ColumnHeaderHeight="30"
                      RowHeight="28"
                      ColumnHeaderStyle="{StaticResource CustomHeaderStyle}">
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderBrush" Value="#444"/>
                        <Setter Property="BorderThickness" Value="0,0,1,0"/>
                        <Setter Property="Padding" Value="4,2"/>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Occurrences" Binding="{Binding Occurrences}" Width="100"/>
                    <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp}" Width="120"/>
                    <DataGridTemplateColumn Width="120">
                        <DataGridTemplateColumn.Header>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Log Level" Foreground="White" FontWeight="Bold" Margin="0,0,4,0"/>
                                <TextBlock Text="⏷" FontSize="14" Foreground="LightBlue"/>
                            </StackPanel>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Level}"
                                        Command="{Binding DataContext.FilterByLevelCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding Level}"
                                        Background="Transparent"
                                        Foreground="LightBlue"
                                        BorderThickness="0"
                                        Cursor="Hand"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Log Message" Binding="{Binding Message}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</Window>
